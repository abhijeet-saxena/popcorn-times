<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Popcorn</title>
    <%- include('./partials/head') %>
    <style>
      * {
        margin: 0;
        padding: 0;
        outline: none;
      }

      body {
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, Helvetica, sans-serif;
      }

      form {
        width: 80vw;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      form h1 {
        font-size: 3.5rem;
        margin: 2rem 0;
      }

      form input {
        padding: 1rem;
        padding-left: 3rem;
        border: solid 1px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
      }

      form label {
        color: darkgray;
        text-align: center;
        padding-bottom: 0.5rem;
      }

      .input-group {
        position: relative;
        width: 60vw;
        display: flex;
        flex-direction: column;
      }

      form select {
        -o-appearance: none;
        -ms-appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;

        height: 47px;
        padding: 0.25rem;
        font-size: 2rem;
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 1;
        background: white;
        border-radius: 0px;
        border-right: none;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
      }

      form button {
        padding: 1rem 2rem;
        font-size: 1rem;
        background: rgb(66, 154, 255);
        color: white;
        border-radius: 5px;
        cursor: pointer;
        transition: 200ms ease-in-out;
      }

      form button:hover {
        background: rgb(3, 120, 255);
      }

      form button:disabled,
      form button:disabled:hover {
        background: lightgray;
        cursor: progress;
      }

      @media only screen and (max-width: 600px) {
        form h1 {
          font-size: 2.5rem;
        }
        .input-group {
          width: 80vw;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/header') %>
    <form onsubmit="submitForm()" action="/search" method="GET">
      <h1>Web Scraper</h1>
      <div class="input-group">
        <label for="titles"
          >Enter TV Series / Movie Title to get OTT providers:</label
        >
        <select name="locale" id="locale">
          <option value="in">ðŸ‡®ðŸ‡³</option>
          <option value="us">ðŸ‡ºðŸ‡¸</option>
          <option value="uk">ðŸ‡¬ðŸ‡§</option>
          <option value="ca">ðŸ‡¨ðŸ‡¦</option>
        </select>
        <input
          type="text"
          name="titles"
          id="titles"
          placeholder="Ex. Friends"
          required
          autocomplete="off"
          autofocus
        />
      </div>
      <br />
      <button id="submit" type="submit">Search Title</button>
    </form>
    <%- include('./partials/footer') %>
  </body>

  <script>
    const submitForm = () => {
      document.querySelector("#submit").innerText = "Loading...";
      document.querySelector("#submit").disabled = true;
    };
  </script>
</html>
