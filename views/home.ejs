<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Popcorn</title>
    <link rel="shortcut icon" href="./favicon.png" type="image/x-icon" />

    <style>
      * {
        margin: 0;
        padding: 0;
        outline: none;
      }

      body {
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, Helvetica, sans-serif;
      }

      form {
        width: 80vw;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      form h1 {
        font-size: 3.5rem;
      }

      form label {
        margin: 2rem 0 0.5rem 0;
        color: darkgray;
        text-align: center;
      }

      form input {
        padding: 1rem;
        width: 80%;
        max-width: 600px;
        border: solid 1px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
      }

      form button {
        padding: 1rem 2rem;
        font-size: 1rem;
        background: rgb(66, 154, 255);
        color: white;
        border-radius: 5px;
        cursor: pointer;
        transition: 200ms ease-in-out;
      }

      form button:hover {
        background: rgb(3, 120, 255);
      }

      form button:disabled,
      form button:disabled:hover {
        background: lightgray;
        cursor: progress;
      }

      @media only screen and (max-width: 600px) {
        form h1 {
          font-size: 2.5rem;
        }
      }
    </style>
  </head>
  <body>
    <form onsubmit="submitForm()" action="/search" method="GET">
      <h1>Web Scraper</h1>
      <label for="titles"
        >Enter TV Series / Movie Title to get OTT providers:</label
      >
      <input
        type="text"
        name="titles"
        id="titles"
        placeholder="Ex. Friends"
        required
        autocomplete="off"
        autofocus
      />
      <br />
      <button id="submit" type="submit">Search Title</button>
    </form>
  </body>

  <script>
    const submitForm = () => {
      document.querySelector("#submit").innerText = "Loading...";
      document.querySelector("#submit").disabled = true;
    };
  </script>
</html>
