<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      Popcorn | <%= !results ? 'Not Found' : data.map(item => item.title) %>
    </title>
    <%- include('./partials/head') %>
  </head>
  <style>
    * {
      margin: 0;
      padding: 0;
      outline: none;
    }
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      width: 100vw;
      font-family: Arial, Helvetica, sans-serif;
    }
    h1 {
      font-size: 3rem;
      text-align: center;
      margin: 125px auto 1rem;
    }
    main {
      display: flex;
      flex-wrap: wrap;
      max-width: 1000px;
      justify-content: flex-start;
    }
    .card {
      position: relative;
      display: flex;
      flex-direction: column;
      width: 175px;
      min-height: 250px;
      margin: 1rem;
      border: solid 1px transparent;
      border-radius: 5px;
    }
    .card .poster {
      width: 175px;
      height: 250px;
      min-width: 175px;
      min-height: 250px;
      border-radius: 5px;
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }
    .links {
      height: 100%;
      padding: 10px 5px 0;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      background: white;
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
    }
    .links a {
      text-decoration: none;
    }
    .links img {
      width: 35px;
      height: 35px;
      margin: 0 5px 5px;
      border-radius: 5px;
      border: solid 1px rgba(0, 0, 0, 0.1);
    }

    @media only screen and (max-width: 600px) {
      h1 {
        font-size: 2.25rem;
      }
      main {
        justify-content: center;
      }
    }
  </style>
  <img id="bg-overlay" src="./background-overlay.jpg" alt="" />
  <body>
    <%- include('./partials/header') %>
    <h1>Your Search Results</h1>
    <main>
      <% if(!results) {%>
      <h4>No results found. Please check titles again</h4>
      <% } %> <% for(var i = 0; i < data.length; i++) { %> <%
      if(!data[i].ottProviders.length) continue %>
      <div class="card">
        <img
          class="poster"
          src="<%= data[i].poster %>"
          alt="<%= data[i].title %>"
        />
        <div class="links">
          <% for(var ii = 0; ii < data[i].ottProviders.length; ii++) { %>
          <a target="_blank" href="<%= data[i].ottProviders[ii].url %>">
            <img
              src="<%= data[i].ottProviders[ii].icon %>"
              alt="<%= data[i].ottProviders[ii].provider %>"
            />
          </a>
          <% } %>
        </div>
      </div>
      <% } %>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
