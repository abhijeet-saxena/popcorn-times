<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      Popcorn | <%= !results ? 'Not Found' : data.map(item => item.title) %>
    </title>
    <%- include('./partials/head') %>
  </head>
  <style>
    * {
      margin: 0;
      padding: 0;
      outline: none;
    }
    body {
      min-height: 100vh;
      width: 100vw;
      font-family: Arial, Helvetica, sans-serif;
      padding-bottom: 5rem;
    }
    main {
      width: 90%;
      height: 100%;
      min-height: 100vw;
      display: flex;
      margin: 5rem auto;
      align-items: flex-start;
    }
    .search-results {
      flex: 1 1 70%;
      padding: 1rem;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-evenly;
      border-right: solid 1px rgba(255, 255, 255, 0.5);
    }
    .search-results h1 {
      width: 100%;
      text-align: center;
      font-size: 2.5rem;
    }
    .search-suggestions {
      flex: 1 1 30%;
      display: flex;
      flex-direction: column;
      padding: 1rem 1rem 1rem 2rem;
    }
    .search-suggestions h3 {
      text-transform: capitalize;
      background: rgba(255, 255, 255, 0.25);
      padding-left: 4px;
      border-radius: 2px;
      margin-left: -1rem;
    }
    .search-suggestions-links {
      margin: 1rem 0;
    }
    .search-suggestions-links a {
      display: block;
      color: rgba(255, 255, 255, 0.6);
      font-size: 1rem;
      padding-bottom: 2px;
      text-decoration: none;
    }
    .search-suggestions-links a:hover {
      text-decoration: underline;
    }
    .card {
      position: relative;
      display: inline-flex;
      flex-direction: column;
      width: 175px;
      min-height: 250px;
      margin: 1rem;
      border: solid 1px transparent;
      border-radius: 5px;
      transition: transform 200ms ease-in-out;
    }
    .card:hover {
      transform: scale(1.1);
    }
    .card .poster {
      width: 175px;
      height: 250px;
      min-width: 175px;
      min-height: 250px;
      border-radius: 5px;
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }
    .links {
      padding: 10px 5px 0;
      display: flex;
      height: 100%;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      background: rgba(255, 255, 255, 0.25);
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
    }
    .links a {
      text-decoration: none;
    }
    .links img {
      width: 35px;
      height: 35px;
      margin: 0 5px 5px;
      border-radius: 5px;
      border: solid 1px rgba(0, 0, 0, 0.1);
    }

    @media only screen and (max-width: 600px) {
      h1 {
        font-size: 2.25rem;
      }
      .search-results {
        padding: 0;
        flex-basis: 60%;
      }
      .search-suggestions {
        flex-basis: 40%;
        padding: 0 1rem;
      }
    }
  </style>
  <img id="bg-overlay" src="./background-overlay.jpg" alt="" />
  <body>
    <%- include('./partials/header') %>
    <main>
      <div class="search-results">
        <% if(!results) {%>
        <h1>No results found. Please check titles again</h1>
        <% } %> <% for(var i = 0; i < data.length; i++) { %> <%
        if(!data[i].ottProviders.length) continue %>
        <div class="card">
          <img
            class="poster"
            src="<%= data[i].poster %>"
            alt="<%= data[i].title %>"
          />
          <div class="links">
            <% for(var ii = 0; ii < data[i].ottProviders.length; ii++) { %>
            <a target="_blank" href="<%= data[i].ottProviders[ii].url %>">
              <img
                src="<%= data[i].ottProviders[ii].icon %>"
                alt="<%= data[i].ottProviders[ii].provider %>"
              />
            </a>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>

      <div class="search-suggestions">
        <% for(var i = 0; i < data.length; i++) { %> <%
        if(!data[i].searchSuggestions.length) continue %>
        <div class="search-suggestions-links">
          <h3><%= data[i].title %></h3>
          <% for(var ii = 0; ii < data[i].searchSuggestions.length; ii++) { %>
          <% if(!data[i].searchSuggestions[ii].titleName) continue %>
          <a href="<%= data[i].searchSuggestions[ii].titleLink %>">
            <%= data[i].searchSuggestions[ii].titleName %> (<%=
            data[i].searchSuggestions[ii].titleYear %>)
          </a>
          <% } %>
        </div>
        <% } %>
      </div>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
