<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="shortcut icon" href="./favicon.png" type="image/x-icon" />
<link
  href="https://fonts.googleapis.com/css2?family=Londrina+Shadow&display=swap"
  rel="stylesheet"
/>
<style>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    outline: none;
  }

  body {
    color: white;
  }

  nav {
    width: 100vw;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    display: flex;
    padding: 1rem;
  }

  nav .logo a {
    user-select: none;
    text-decoration: none;
  }

  nav h2 {
    font-family: "Londrina Shadow", cursive;
    font-size: 2.25rem;
    line-height: 3rem;
    display: inline-block;
    background: #db2944;
    color: white;
    padding: 0 0.5rem;
    letter-spacing: 5px;
    border-radius: 5px;
    transform: skewX(-10deg);
  }

  .about {
    margin-left: auto;
    display: flex;
    align-items: center;
  }

  .about a {
    margin: 0 1rem;
  }

  .social-action-icons {
    transition: 200ms ease-out;
  }

  .social-action-icons:hover {
    transform: scale(1.5);
  }

  #bg-overlay {
    position: fixed;
    top: 0;
    left: 0;
    -webkit-filter: brightness(25%);
    z-index: -1;
  }

  footer {
    position: fixed;
    display: flex;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
  }

  footer svg {
    animation: beat 500ms ease-in-out infinite alternate;
    margin-left: 5px;
  }

  footer a {
    margin-left: 5px;
    color: white;
  }

  @keyframes beat {
    from {
      transform: scale(0.8);
    }
  }

  @media (max-width: 480px) {
    .about a {
      margin: 0 0.5rem;
    }
  }
</style>
